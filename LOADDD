DOGHUB.__index = DOGHUB

-- à¸‚à¹‰à¸­à¸¡à¸¹à¸¥à¸žà¸·à¹‰à¸™à¸à¸²à¸™
DOGHUB.Version = "1.0.0"
DOGHUB.Author = "DOGHUB Team"

-- à¸à¸²à¸£à¸•à¸±à¹‰à¸‡à¸„à¹ˆà¸²à¹€à¸£à¸´à¹ˆà¸¡à¸•à¹‰à¸™
local Config = {
    WindowSize = {600, 400},
    WindowPosition = {100, 100},
    Theme = "DarkBlue",
    Transparency = 0.95,
    AnimationSpeed = 0.3,
    ShadowEnabled = true
}

