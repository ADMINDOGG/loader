            print("Shadows:", value and "Enabled" or "Disabled")
        end
    })
    
    settingsTab:CreateSlider({
        Name = "Transparency",
        Range = {0.5, 1.0},
        Increment = 0.1,
        CurrentValue = 0.95,
        Position = {10, 145},
